<%layout("./layouts/boilerplate")%>
<script src="/js/script.js"></script>
<body>
    <h1 class="col-6 offset-3 mt-3"> SignUp Here!</h1>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-2">
                <label for="username" 
                class="form-label">Username</label>
                <input type="text" 
                name="username" 
                id="username" 
                required class="form-control">
                
                <div class="valid-feedback">
                    Looks good!
                  </div>

                  <div class="mb-2">
                    <label for="email" 
                    class="form-label">Email</label>
                    <input type="text" 
                    name="email" 
                    id="email" 
                    required class="form-control">
                </div>

                <div class="mb-2">
                    <label for="password" 
                    class="form-label">Password</label>
                    <input type="password" 
                    name="password" 
                    id="password" 
                    required class="form-control">
                </div>
                <button class="btn btn-success mt-3">SingUp!</button>
        </form>

    </div>
    
</div>

    
</body>

