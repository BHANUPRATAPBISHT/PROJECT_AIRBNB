<%layout("./layouts/boilerplate")%>
<script src="/js/script.js"></script>
<body>

    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h1 class="">Create A new Listing</h1>

  
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="enter title" required class="form-control">
            
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        <div class="mb-2">
            <label for="description" class="form-label">Description</label>
           
            <textarea required name="listing[description]" placeholder="enter your description" class="form-control"></textarea> 
            <div class="invalid-feedback">
                Please provide a valid Desc.
              </div>
        </div>
      
        <div class="mb-2">
            <label for="image" class="form-label">Upload Image</label>
            <input   name="listing[image]" 
             placeholder="enter image url/link" type="file" class="form-control">
             
            
        </div>
        <div class="row">
            <div class="mb-2 col-md-4">
                <label for="number" class="form-label">Price</label>
                <input required  name="listing[price]" placeholder="enter price" class="form-control">
                <div class="invalid-feedback">
                    Please provide a valid Price.
                  </div>
            </div>
            <div class="mb-2 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input  required ="text" name="listing[country]" placeholder="enter your country" class="form-control">
                <div class="invalid-feedback">
                    Please provide a valid Country
                  </div>
            </div>

        </div>
        
        <div class="mb-2">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="enter your location" class="form-control">
            <div class="invalid-feedback">
                Please provide a valid Location
              </div>
            
        </div>
        
        <button class="btn btn-dark add-btn mb-2">ADD</button>
    </form>
</div>
</div>
</body>
